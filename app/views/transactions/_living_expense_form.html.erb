<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :date %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :liper, :as => :hidden, :input_html => { :value => "living" } %>
    <%= f.input :ioe, :as => :hidden, :input_html => { :value => "expense" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-danger" %>
  </div>
<% end %>
