<%= link_to "Edit User", edit_user_registration_path(@user), class: "" %>
<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

<%= simple_form_for(@user, remote: true, html: { id: 'dm-form'} ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-check form-switch" id="toggle-switch">
         <%= f.input :darkmode, as: :boolean, checked_value: :true, unchecked_value: :false %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
